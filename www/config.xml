<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.pocketfiction.mobileempire"
	versionCode 	= "10">
	version 	= "0.5.0">

	<name>MobileEmpire</name>

	<description>
		A mobile platform Wolfpack Empire client
	</description>

	<author href="https://empiredirectory.net"
		email="fstltna@me.com">
		Marisa Giancarla
	</author>

	<icon src="icons/default.png" gap:role="default" />
`	<icon src="icons/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
	<icon src="icons/ios/icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />

	<gap:splash src="splash.png" />
	<gap:splash src="splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1004" />
	<gap:splash src="splash/ios/Default-Portrait_at_2x.png" gap:platform="ios" width="1536" height="2008" />

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<access origin="*" />

	<!-- sample preference specification -->
	<preference name="autorotate" value="false" readonly="true"/>
	<preference name="orientation" value="portrait" readonly="true"/>
	<preference name="target-device" value="tablet" readonly="true"/>
</widget>
